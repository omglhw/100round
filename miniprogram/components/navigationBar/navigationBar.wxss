/* components/navigationBar/navigationBar.wxss */
.nav-bar {
  position: fixed;
  width: 100%;
  top: 0;
  color: #fff;
  background: #FFD000;
}

.nav-bar .inner-wrapper {
  position: absolute;
  display: flex;
  width: 100%;
}

.nav-bar .back {
  font-size: 20px;
}

.nav-bar .search-wrapper {
  width: 550rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-bar .search-wrapper .search {
  
  color: #333;
  font-size: 14px;
  background: #fff;

  border-radius: 50px;
  padding-left: 14px;
}